<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:util="http://www.springframework.org/schema/util"
        xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.0.xsd
                http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">
                
    <!-- Load properties from mandatory file provided by this component.-->            
    <bean id="core.component.properties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="location">
            <value>classpath:/au/com/sensis/mobile/web/component/core/core-component.properties</value>
        </property>
        
    </bean>                
    
    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <!-- Default properties provided by this component. -->
        <property name="properties" ref="core.component.properties"/>
        <property name="placeholderPrefix" value="@{core.component."/>
        
        <!-- Optional properties provided by the client of this component. -->
        <property name="location">
            <value>classpath:/core-component.properties</value>
        </property>
        <property name="ignoreResourceNotFound" value="true"/>
    </bean>

    <bean name="core.component.handlerMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <value>
                @{core.component.handler.mapping.url.prefix}/js/**/*=core.component.getJavaScript
                @{core.component.handler.mapping.url.prefix}/jsexploded/**/*=core.component.getExplodedJavaScript
            </value>
        </property>
    </bean>
    
    <bean id="core.component.buildDateSimpleDateFormat" class="java.text.SimpleDateFormat">
        <constructor-arg index="0" value="dd-MM-yy HH:mm:ss"/>
    </bean>
    
    <bean id="core.component.abstractClasspathResourceGetter" 
        class="au.com.sensis.mobile.web.component.core.spring.AbstractResourceLoaderController"
        abstract="true">
        <property name="resourceLastModifiedDate">
            <bean factory-bean="core.component.buildDateSimpleDateFormat" factory-method="parse">
                <constructor-arg index="0" value="@{core.component.build.date}"/>            
            </bean>
        </property>
        <property name="buildVersion" value="@{core.component.build.version}"/>
        <property name="resourceLoader" ref="core.component.resourceLoader"/>
        <property name="supportCaching" value="@{core.component.support.httpClientCaching}"/>
        
        <!-- 
          - Allow clients to use cached response for about 10 years so that they don't always have to 
          - re-validate the cached copy. This relies on new deployments serving up JS files from a new, unique URL.
          - This in turn affects all Volantis *.mscr files.  
          -->
        <!-- <property name="cacheSeconds" value="315360000"/>-->
    </bean>
    
    <bean id="core.component.getJavaScript" class="au.com.sensis.mobile.web.component.core.spring.GetJavaScriptController"
        parent="core.component.abstractClasspathResourceGetter">
        <property name="contextRootComponentPrefix" value="@{core.component.context.root.component.prefix}"/>    
    </bean>
    
    <bean id="core.component.getExplodedJavaScript" class="au.com.sensis.mobile.web.component.core.spring.GetExplodedJavaScriptController"
        parent="core.component.abstractClasspathResourceGetter">
    </bean>
    
    <bean name="core.component.resourceLoader" class="au.com.sensis.mobile.web.component.core.spring.ClasspathResourceLoader"/>
</beans>
