<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:util="http://www.springframework.org/schema/util"
        xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.0.xsd
                http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">
                
    <!-- ================================================================================================ -->
    <!-- Handler mappings. -->                
    
    <bean name="core.component.handlerMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <value>
                @{core.component.handler.mapping.url.prefix}/js/**/*=core.component.getJavaScriptBundle
                @{core.component.handler.mapping.url.prefix}/jsmember/**/*=core.component.getJavaScriptBundleMember
            </value>
        </property>
    </bean>
    
    <!-- ================================================================================================ -->                
    <!-- Controllers. -->
    
    <bean id="core.component.abstractResourceBundleLoaderController" 
        class="au.com.sensis.mobile.web.component.core.bundle.AbstractResourceBundleLoaderController"
        abstract="true"
        init-method="validateState">
        <property name="resourceBundleLoader" ref="core.component.resourceBundleLoader"/>
        <property name="featureEnablementRegistry" ref="core.component.featureEnablementRegistry"/>
        
        <!--
          - Allow clients to use cached response for about 10 years so that they don't always have to 
          - re-validate the cached copy. This relies on new deployments serving up JS files from a new, unique URL.
          - This in turn affects all Volantis *.mscr files.  
          -->
        <!-- <property name="cacheSeconds" value="315360000"/>-->
    </bean>
    
    <bean id="core.component.getJavaScriptBundle" class="au.com.sensis.mobile.web.component.core.bundle.ResourceBundleLoaderController"
        parent="core.component.abstractResourceBundleLoaderController"
        init-method="validateState">
        <property name="resourceNameRequestUriPrefix" value="/js/"/>    
        <property name="contextRootComponentPrefix" value="@{core.component.context.root.component.prefix}"/>
    </bean>
    
    <bean id="core.component.getJavaScriptBundleMember" class="au.com.sensis.mobile.web.component.core.bundle.ExplodedBundleMemberResourceLoaderController"
        parent="core.component.abstractResourceBundleLoaderController"
        init-method="validateState">
        <property name="resourceNameRequestUriPrefix" value="/jsmember/"/>
    </bean>
    
</beans>
