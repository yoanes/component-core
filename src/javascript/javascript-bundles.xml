<?xml version="1.0" encoding="UTF-8"?>
<bs:bundlesConfig xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:bs="http://mobile.sensis.com.au/build-scripts"
    xsi:schemaLocation="http://mobile.sensis.com.au/build-scripts au.com.sensis.mobile.bundles.xsd">

    <!-- Bundles for the core-component proper. -->    
    <bundles basename="core-component" subpackage="core">
        <bundle name="common" abstract="true">
            <fileset dir="${src.javascript.dir}/core/device-invariant">
                <include name="mootools.js" />
            </fileset>
            <fileset dir="${src.javascript.dir}/core/device-invariant">
                <include name="**/*" />
                <exclude name="mootools.js" />
            </fileset>
        </bundle>
        <bundle name="default" parent="common">
        </bundle>
        <bundle name="apple" parent="common">
        </bundle>
    </bundles>

    <!-- Bundles for the logging-component. -->    
    <bundles basename="logging-component" subpackage="logging">
        <bundle name="apple">
            <fileset dir="${src.javascript.dir}/logging/device-variant/apple">
                <include name="**/logger*.js" />        
            </fileset>
        </bundle>
        <bundle name="ie">
            <fileset dir="${src.javascript.dir}/logging/device-variant/ie">
                <include name="**/logger*.js" />
            </fileset>
        </bundle>
        <bundle name="default">
            <fileset dir="${src.javascript.dir}/logging/device-variant/default">
                <include name="**/logger*.js" />        
            </fileset>
        </bundle>
    </bundles>
    
    <!-- Bundles for the util-component. -->    
    <bundles basename="util-component" subpackage="util">
        <bundle name="default">
            <fileset dir="${src.javascript.dir}/util/device-invariant">
                <include name="utils.js" />        
            </fileset>
        </bundle>
    </bundles>
    
    <!--  Bundles for the deviceport -->
    <bundles basename="deviceport-component" subpackage="deviceport">
        <bundle name="apple">
            <fileset dir="${src.javascript.dir}/deviceport/device-variant/apple">     
            </fileset>
        </bundle>
        <bundle name="htcDiamond">
            <fileset dir="${src.javascript.dir}/deviceport/device-variant/htcDiamond">     
            </fileset>
        </bundle>
        <bundle name="htcTouchHD">
            <fileset dir="${src.javascript.dir}/deviceport/device-variant/htcTouchHD">     
            </fileset>
        </bundle>
        <bundle name="htcDesire">
            <fileset dir="${src.javascript.dir}/deviceport/device-variant/htcDesire">     
            </fileset>
        </bundle>
    </bundles>
    
</bs:bundlesConfig>
